<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ePregledi.MobileApp.Views.EditUserPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Uredi profil"
                HorizontalOptions="CenterAndExpand" />

            <Label  Text="Username" FontSize="Medium"></Label>
            <Entry  Text="{Binding Username}" ></Entry>

            <Label  Text="Email" FontSize="Medium"></Label>
            <Entry  Text="{Binding Email}"></Entry>

            <Label  Text="First name" FontSize="Medium"></Label>
            <Entry  Text="{Binding FirstName}" ></Entry>

            <Label  Text="Last name" FontSize="Medium"></Label>
            <Entry  Text="{Binding LastName}"></Entry>

            <Label  Text="Phone number" FontSize="Medium"></Label>
            <Entry  Text="{Binding PhoneNumber}" ></Entry>

            <Button Command="{Binding SaveCommand}"  HorizontalOptions="FillAndExpand" Text="Sacuvaj" BackgroundColor="RoyalBlue" TextColor="White" FontSize="Medium"></Button>
            <Label IsVisible="{Binding IsBusy}" Text="..."></Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>